{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "suffix": {
            "type": "String"
        },
        "location": {
            "type": "String"
        }
    },
    "functions": [],
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Web/connections",
            "apiVersion": "2016-06-01",
            "name": "[concat('datalake', parameters('suffix'))]",
            "location": "[parameters('location')]",
            "kind": "V1",
            "properties": {
                "api": {
                    "id": "[concat(subscription().id, '/providers/Microsoft.Web/locations/', resourceGroup().location, '/managedApis/', 'azureblob')]"
                },
                "authenticatedUser": {},
                "customParameterValues": {},
                "displayName": "[concat('datalake', parameters('suffix'))]",
                "parameterValueSet": {
                    "name": "managedIdentityAuth",
                    "values": {}
                }
            }
        },
        {
            "type": "Microsoft.Web/connections",
            "apiVersion": "2016-06-01",
            "name": "[concat('keyvault', parameters('suffix'))]",
            "location": "[parameters('location')]",
            "kind": "V1",
            "properties": {
                "api": {
                    "id": "[concat(subscription().id, '/providers/Microsoft.Web/locations/', resourceGroup().location, '/managedApis/keyvault')]"
                },
                "authenticatedUser": {},
                "customParameterValues": {},
                "displayName": "[concat('keyvault', parameters('suffix'))]",
                "parameterValueSet": {
                    "name": "oauthMI",
                    "values": {
                        "vaultName": {
                            "value": "keyvault0503mvp"
                        }
                    }
                }
            }
        },
        {
            "type": "Microsoft.Web/connections",
            "apiVersion": "2016-06-01",
            "name": "[concat('office', parameters('suffix'))]",            
            "location": "[parameters('location')]",
            "kind": "V1",
            "properties": {
                "displayName": "fassis@microsoft.com",
                "authenticatedUser": {
                    "name": "fassis@microsoft.com"
                },
                "api": {
                    "id": "[concat(subscription().id, '/providers/Microsoft.Web/locations/', resourceGroup().location, '/managedApis/office365')]"
                },
                "testLinks": [
                    {
                        "requestUri": "[concat('https://management.azure.com:443/subscriptions/',subscription().id,'/resourceGroups/',resourceGroup().name,'/providers/Microsoft.Web/connections/office365/extensions/proxy/testconnection?api-version=2018-07-01-preview')]",
                        "method": "get"
                    }
                ],
                "testRequests": [
                    {
                        "body": {
                            "request": {
                                "method": "get",
                                "path": "testconnection"
                            }
                        },
                        "requestUri": "[concat('https://management.azure.com:443/subscriptions/',subscription().id,'/resourceGroups/',resourceGroup().name,'/providers/Microsoft.Web/connections/office365/dynamicInvoke?api-version=2018-07-01-preview')]",
                        "method": "POST"
                    }
                ]
            }            
        }
    ],
    "outputs": {}
}